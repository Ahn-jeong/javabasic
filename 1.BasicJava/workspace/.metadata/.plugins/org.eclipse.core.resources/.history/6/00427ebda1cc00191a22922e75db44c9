<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>달력</title>
		<style>
			table,td{
				border: 1px solid black;
				text-align: center;
			}
			td{
				width : 50px;
				height : 50px;
			}
		</style>
		<script>
			function proc1(){
				var dayname = new Array("일", "월", "화", "수", "목", "금", "토")
				var str = ""
				var now = new Date(); // 년.월
				str += "<table>";
				str += "<tr>"
				str += "<td>"
				str += "<"
				str += "</td>"
				for(var i = 0; i < 1; i++){
			    	str += "<td colspan = " + "5" + ">";
					str += now.getFullYear() + "년" + "  ";		
					str += now.getMonth()+1 + "월";
					str += "</td>"
				}
				str +="<td>";
		    	str += ">";
		    	str +="</td>";
				str += "</tr>"
				str += "<tr>"
				for(var i = 0; i<7; i++){
					str += "<td>"
					str +=(dayname[i]);
					str += "</td>"					
				}
				str += "</tr>";
				for(var i = 0; i < 5; i++){
					str += "<tr>";
					for(var j = 0; j < 7; j++){
						str += "<td id =" + parseInt(i*7+j) +">";
						str += "</td>";
					}
					str += "</tr>";
				}
				str += "</table>";
				
				var day = now.getDay(); // 요일별 숫자
				var lastday = new Date(2019,9,0).getDate(); //마지막 날짜
				
				document.getElementById("result").innerHTML = str;
				
				
				for(var j = day; j <= lastday+day-1; j++){			
					document.getElementById(j).innerHTML = (j-day)+1; 
				}
					
				
				
				
				
			}
			
			// alert = new Date(2019,10,0).getDate(); // 해당월의 마지막 날짜
		</script>
	</head>
	<body>
		<button type = "button" id = "button" onclick = "proc1();">
		</button>
		<p id ="result"></p>
	</body>
</html>